<Window x:Class="praktika.Pages.Autho"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:praktika.Pages"
        mc:Ignorable="d"
        Title="Autho" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1" Margin="0, 10, 0, 0" VerticalAlignment="Center">
            <TextBox x:Name="Hello" Height="45" Text="Добро пожаловать" RenderTransformOrigin="0.621,0.723" TextAlignment="Center" FontWeight="Bold" FontStyle="Italic"/>
            <Button x:Name="Authbtn1" Content="Войти как пользователь" Height="45" Click="Authbtn1_Click" />
            <Button x:Name="Authbtn" Content="Войти как сотрудник" Height="45" Click="Authbtn_Click" />
        </StackPanel>
    </Grid>
</Window>
