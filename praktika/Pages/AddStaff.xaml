<Window x:Class="praktika.Pages.AddStaff"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:praktika.Pages"
        mc:Ignorable="d"
        Title="AddStaff" Height="450" Width="800">
    <Grid>
        <StackPanel Width="200" VerticalAlignment="Center">
            <TextBox x:Name="id" Text="ID:" BorderThickness="0"/>
            <TextBox x:Name="IDBox"/>
            <TextBox x:Name="Names" Text="Имя:" BorderThickness="0"/>
            <TextBox x:Name="Name"/>
            <TextBox x:Name="Surnames" Text="Фамилия:" BorderThickness="0"/>
            <TextBox x:Name="Surname"/>
            <TextBox x:Name="Patronymics" Text="Отчество:" BorderThickness="0"/>
            <TextBox x:Name="Patronymic"/>
            <TextBox x:Name="Numbers" Text="Телефон:" BorderThickness="0"/>
            <TextBox x:Name="Number"/>
            <TextBox x:Name="idrole" Text="ID роли:" BorderThickness="0"/>
            <TextBox x:Name="RoleId"/>
            <Button x:Name="AddBtn" Content="Add Employee" Click="AddBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
